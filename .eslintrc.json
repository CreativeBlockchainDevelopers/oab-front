{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base",
        "airbnb-typescript/base",
        "@vue/typescript/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "parser": "@typescript-eslint/parser",
        "sourceType": "module",
        "project": "tsconfig.json"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ]
    },
    "settings": {}
}